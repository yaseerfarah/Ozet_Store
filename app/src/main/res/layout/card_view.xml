<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="300dp">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_margin="4dp"
            android:elevation="3dp"
            android:id="@+id/card_view"
            >



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:cardCornerRadius="6dp"
                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pro_image"
                    android:scaleType="centerInside"
                    android:src="@color/black"

                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/fav_button"
                    android:background="@drawable/ic_favorite_border_black_24dp"
                    />
            </RelativeLayout>
            </android.support.v7.widget.CardView>











        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="Name" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text="150" />
                <TextView
                    android:layout_marginLeft="1dp"
                    android:id="@+id/pro_egp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/pro_price"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text=".EGP" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pro_exprice"
                    android:text="155"
                    android:textColor="@android:color/darker_gray"
                    android:layout_toRightOf="@+id/pro_egp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pro_exegp"
                    android:text=".EGP"
                    android:textColor="@android:color/darker_gray"
                    android:layout_toRightOf="@+id/pro_exprice"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="1dp"
                    android:textStyle="normal"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:id="@+id/pro_linexprice"
                    android:layout_toRightOf="@+id/pro_egp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_alignEnd="@+id/pro_exegp"
                    android:background="@android:color/black"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        </RelativeLayout>


</RelativeLayout>