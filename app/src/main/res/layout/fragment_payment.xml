<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaseerfarah22.com.ozet_design.View.Payment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            >


            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/bank_card"

                >

            </android.support.v4.view.ViewPager>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_card"
                android:id="@+id/payment_method"
                android:layout_marginTop="20dp"

                >

                <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cash_method"
                    android:layout_marginBottom="10dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_money"
                            android:backgroundTint="@color/black"
                            android:layout_marginTop="12dp"
                            android:id="@+id/cash_icon"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cash_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Cash on Delivery"
                            android:textColor="@color/black"
                            android:id="@+id/cash_text"
                            android:layout_marginBottom="10dp"
                            />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/paypal_method"
                    android:layout_marginBottom="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_paypal_outlined_logo"
                            android:backgroundTint="@color/black"
                            android:layout_marginTop="12dp"
                            android:id="@+id/pay_icon"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pay_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="PayPal"
                            android:textColor="@color/black"
                            android:id="@+id/pay_text"
                            android:layout_marginBottom="10dp"
                            />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/credit_method"
                    android:layout_marginBottom="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_credit_card"
                            android:backgroundTint="@color/black"
                            android:layout_marginTop="12dp"
                            android:id="@+id/credit_icon"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/credit_icon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="Credit Card"
                            android:textColor="@color/black"
                            android:id="@+id/credit_text"
                            android:layout_marginBottom="10dp"
                            />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>



            </RelativeLayout>







            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/payment_method"
                android:layout_marginTop="30dp"
                android:id="@+id/payment_form"
                ></FrameLayout>




        </RelativeLayout>

    </ScrollView>

</FrameLayout>
