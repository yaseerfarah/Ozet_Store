<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <android.support.v7.widget.CardView
       android:layout_width="250dp"
       android:layout_height="310dp"
       android:id="@+id/dialog_cardView"
       app:cardBackgroundColor="@color/colorGray"
       app:cardCornerRadius="8dp"
       android:elevation="1dp"
       >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:background="@drawable/ic_close_black_24dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/white"
               android:elevation="5dp"
               android:id="@+id/dialog_close"
               />
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="140dp"
               android:scaleType="centerInside"
               android:src="@mipmap/app"
               android:id="@+id/dialog_image"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_image"
               android:layout_marginTop="5dp"
               android:text="London SweetShirt"
               android:textColor="@color/black"
               android:textSize="16sp"
               android:textStyle="bold"
               android:layout_marginLeft="10dp"
               android:id="@+id/dialog_title"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_title"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="20dp"
               android:text="Size : "
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_size"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_title"
               android:layout_toRightOf="@+id/dialog_size"
               android:layout_marginLeft="40dp"
               android:layout_marginTop="20dp"
               android:text="XL"
               android:textStyle="bold"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_ansize"
               />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_size"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="20dp"
               android:text="Quantity : "
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_quantity"

               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_size"
               android:layout_toRightOf="@+id/dialog_quantity"
               android:layout_marginLeft="40dp"
               android:layout_marginTop="20dp"
               android:text="1"
               android:typeface="serif"
               android:textStyle="bold"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_anquantity"

               />




           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_quantity"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:text=".EGP"
               android:typeface="serif"
               android:textStyle="bold"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_egp"

               />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/dialog_quantity"
               android:layout_toLeftOf="@+id/dialog_egp"
               android:layout_marginRight="2dp"
               android:layout_marginTop="10dp"
               android:text="50.00"
               android:typeface="serif"
               android:textStyle="bold"
               android:textColor="@color/black"
               android:textSize="13sp"
               android:id="@+id/dialog_price"

               />


       </RelativeLayout>


   </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/dialog_submit"
        app:srcCompat="@drawable/ic_check_black_24dp"
        android:scaleType="center"
        app:backgroundTint="@color/black"
        app:fabSize="normal"
        android:layout_centerHorizontal="true"
         />


</RelativeLayout>



</android.support.constraint.ConstraintLayout>