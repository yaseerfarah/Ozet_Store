<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaseerfarah22.com.ozet_design.View.CheckOut">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/box1"
            android:background="@color/light_gray"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/title_checkout"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:id="@+id/check_close"
                android:background="@drawable/ic_close_black_24dp"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_checkout"
                android:layout_marginTop="20dp"
                >

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/shipping_back"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/ic_background_1_black_24dp"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/shipping"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/ic_radio_button_unchecked_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shipping_back"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:text="Shipping"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:id="@+id/from_shipp_to_pay"
                    android:layout_toStartOf="@+id/shipping_back"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/payment_back"
                    android:background="@color/grey"
                    />


                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/payment_back"
                    android:backgroundTint="@color/grey"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_background_1_black_24dp"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/payment"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:background="@drawable/ic_radio_button_unchecked_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shipping_back"
                    android:layout_centerHorizontal="true"
                    android:text="Payment"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:id="@+id/from_pay_to_done"
                    android:layout_toStartOf="@+id/payment_back"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/done_back"
                    android:background="@color/grey"
                    />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/done_back"
                    android:backgroundTint="@color/grey"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/ic_background_1_black_24dp"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/done"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:visibility="invisible"
                    android:background="@drawable/ic_radio_button_unchecked_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/done_back"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:text="Success"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />




            </RelativeLayout>






        </RelativeLayout>





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/box2"
            android:layout_above="@+id/box3"
            android:layout_below="@+id/box1"
            ></FrameLayout>


        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/box3"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
            android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_next"
            android:background="@drawable/border_b2"
            android:text="next"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            />
    </RelativeLayout>






    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
